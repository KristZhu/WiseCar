<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wc0bg_dark"
    tools:context=".function.serviceRecords.ServiceRecordsDashboardActivity">

    <ImageButton
        android:id="@+id/backImageButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@null"
        android:padding="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.1"
        app:srcCompat="@drawable/wc0back" />

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/backImageButton"
        app:layout_constraintDimensionRatio="4:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/backImageButton"
        app:layout_constraintTop_toTopOf="@+id/backImageButton"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.3"
        app:srcCompat="@drawable/wc0title"
        android:contentDescription="TODO" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/searchDiv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/wc0bg_yellow"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backImageButton"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:scaleType="fitXY"
            android:alpha="0.5"
            app:layout_constraintWidth_percent="0.7"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/vehicle0edittext" />

        <ImageView
            android:id="@+id/searchImageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="@id/imageView1"
            app:layout_constraintBottom_toBottomOf="@id/imageView1"
            app:layout_constraintStart_toStartOf="@id/imageView1"
            app:layout_constraintDimensionRatio="1:1"
            app:srcCompat="@drawable/share_vehicle0search" />

        <AutoCompleteTextView
            android:id="@+id/searchEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:textSize="16sp"
            android:textColor="#000000"
            android:autoText="true"
            android:background="@null"
            android:textColorLink="#ffffff"
            android:popupBackground="#ffffff"
            android:hint="SEARCH BY REGISTRATION NUMBER"
            android:textColorHint="#ffffff"
            android:completionThreshold="1"
            android:imeOptions="actionSearch"
            android:inputType="textAutoComplete"
            android:dropDownAnchor="@id/imageView1"
            app:layout_constraintBottom_toBottomOf="@+id/imageView1"
            app:layout_constraintEnd_toEndOf="@+id/imageView1"
            app:layout_constraintStart_toEndOf="@+id/searchImageView"
            app:layout_constraintTop_toTopOf="@+id/imageView1" />

        <ImageButton
            android:id="@+id/addImageButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:srcCompat="@drawable/share_vehicle0add"
            android:padding="0dp"
            android:background="@null"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fadingEdge="vertical"
        android:scrollbars="vertical"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchDiv"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:id="@+id/sharesLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="4.3:1"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="#ffffff"/>

                <ImageButton
                    android:id="@+id/editImageButton"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/share_vehicle0edit"
                    app:layout_constraintHeight_percent="0.5"
                    app:layout_constraintDimensionRatio="1:1"
                    android:scaleType="fitXY"
                    android:padding="0dp"
                    android:background="@null" />

                <TextView
                    android:id="@+id/companyTextView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/editImageButton"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="XYZ PTY LTD,     ID 10086"
                    android:autoSizeMinTextSize="14dp"
                    android:textColor="#000000"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintHeight_percent="0.3"
                    android:autoSizeTextType="uniform"
                    app:layout_constraintVertical_bias="0.0">
                </TextView>

                <TextView
                    android:id="@+id/startTextView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/editImageButton"
                    app:layout_constraintTop_toBottomOf="@id/companyTextView"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="Start 9:00"
                    android:autoSizeMinTextSize="14dp"
                    android:textColor="#000000"
                    app:layout_constraintHeight_percent="0.2"
                    android:autoSizeTextType="uniform"
                    app:layout_constraintVertical_bias="0.0"
                    android:layout_marginStart="16dp">
                </TextView>

                <TextView
                    android:id="@+id/endTextView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/editImageButton"
                    app:layout_constraintTop_toBottomOf="@id/startTextView"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="End   9:00"
                    android:autoSizeMinTextSize="14dp"
                    android:textColor="#000000"
                    app:layout_constraintHeight_percent="0.2"
                    android:autoSizeTextType="uniform"
                    app:layout_constraintVertical_bias="0.0"
                    android:layout_marginStart="16dp">
                </TextView>

                <TextView
                    android:id="@+id/recurringTextView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/editImageButton"
                    app:layout_constraintTop_toBottomOf="@id/endTextView"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="Recurring"
                    android:autoSizeMinTextSize="14dp"
                    android:textColor="#000000"
                    app:layout_constraintHeight_percent="0.2"
                    android:autoSizeTextType="uniform"
                    app:layout_constraintVertical_bias="0.0"
                    android:layout_marginStart="16dp">
                </TextView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
